@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model List<Models.ViewModel.MUONTRAViewModel>
<br />

    <div class="row">
        <div class="col-md-12">
            <h1 class="page-head-line">Danh mục Đồ án đang mượn</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Họ và tên: <strong>@ViewBag.TenDocGia</strong> | MSSV: <strong>@ViewBag.MaDocGia</strong>
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>MaPM</th>
                                    <th>MaDA</th>
                                    <th>Tên DA</th>
                                    <th>Hạn trả</th>
                                    <th>Status</th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr id="row_@item.MaPhieu">
                                        <td>@item.MaPhieu</td>
                                        <td>@item.MaDoAn</td>
                                        <td>@item.DA_TenDoAn</td>
                                        <td>@item.HanTra.Value.ToString("dd/MM/yyyy")</td>
                                        <td>@item.TrangThai</td>
                                        <td>
                                            @if (@item.TrangThai != "Gia Hạn") {
                                            <a href="/Admin/SINHVIEN/Extend/@item.MaPhieu">Gia Hạn</a>
                                            }
                                        </td>
                                        <td>
                                            @if (@item.TrangThai != "Đã trả") { 
                                            <a href="/Admin/SINHVIEN/Check/@item.MaPhieu">Trả</a>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- End  Kitchen Sink -->
        </div>
    </div>
