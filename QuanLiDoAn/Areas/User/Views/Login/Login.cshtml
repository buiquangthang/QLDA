@{
    ViewBag.Title = "Login";
    Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
}
@model QuanLiDoAn.Areas.Admin.Models.LoginModel
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h4 class="page-head-line">Please Login To Enter </h4>

        </div>

    </div>
    <div class="row">
        <div class="col-md-6">
            <h4> Đăng nhập với <strong>Tài khoản cá nhân  :</strong></h4>
            <br />
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, null, new { @class = "alert alert-danger" })
                <fieldset>
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @placeholder = "UserName", @autofocus = "autofocus" })
                    </div>
                    <div class="form-group">
                        @Html.PasswordFor(model => model.Password, new { @class = "form-control" })

                    </div>
                    <div class="checkbox">
                        <label>
                            @Html.CheckBoxFor(model => model.RememberMe)Remember Me
                        </label>
                    </div>
                    <hr/>
                    <!-- Change this to a button or input when using this as a form -->
                    <button type="submit" class="btn btn-info"><span class="glyphicon glyphicon-user"></span> &nbsp;Log Me In </button>&nbsp;
                </fieldset>
            }   
        </div>
    </div>
</div>
